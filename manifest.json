{
  "manifest_version": 2,
  "name": "FocusBadge",
  "version": "1.0",
  "description": "FocusBadge is a minimalist browser extension that helps you stay focused and accountable during work/study hours â€” with integrity",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["script.js"]
    }
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
}
